---
import Hero from "../components/Hero.astro";

// src/layouts/MainLayout.astro
const { title = "Author Website" } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <link rel="stylesheet" href="/styles/global.css" />
    </head>
    <body>
        <header>
            <hr class="header-top" />

            <h1 class="header-title">John Blanchard Jefferson</h1>
            <!-- <hr class="header-divider" /> -->
            <nav>
                <a href="/">
                    <ion-icon name="home"></ion-icon>
                    <span class="logo">JB Jefferson</span>
                    
                </a>
                <ul>
                    <li><a href="/books">Books</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/news">News</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </nav>
            
        </header>

        <main>
            <slot />
        </main>

        <footer>
            <p>Â© {new Date().getFullYear()} John Blanchard Jefferson. All rights reserved.</p>
        </footer>

        <script type="module" src="https://unpkg.com/ionicons@7.4.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.4.0/dist/ionicons/ionicons.js"></script>
    </body>
</html>

<style>
    /* General Styles */
    body {
        font-family: "Roboto", sans-serif;
        background: #0d0d0d;
        color: #f5f5f5;
        max-width: 1920px;
        margin: auto;
        line-height: 1.6;
    }

    header {
        background: #1a1a1a;
        padding: 0rem 0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1,
    h2,
    h3 {
        font-family: "Playfair Display", serif;
    }

    .header-title {
        font-size: 3rem;
        color: white; /* Corrected the color property */
        margin: auto;
        text-align: center;
        font-family: "TopGun";
        font-weight: 400;
        letter-spacing: 0.4rem;
        /* text-shadow: 2px 2px 4px #cc0000; 
        text-shadow: 2px 2px 4px #0033cc;  */
        text-shadow:
            1px 1px 2px red,
            0 0 1em blue,
            0 0 0.2em blue;

    }

    .logo {
        font-family: "Playfair Display", serif;
        font-weight: 700;
    }

    nav {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        border-top: 3px solid #cc0000;
        border-bottom: 3px solid #0033cc;
    }

    nav a {
        color: #f5f5f5;
        text-decoration: none;
        font-weight: bold;
        position: relative;
        transition: color 0.3s ease;
    }

    nav a:hover {
        color: #b30000;
    }

    nav a::after {
        content: "";
        display: block;
        width: 0;
        height: 2px;
        background: #b30000;
        transition: width 0.3s ease;
        position: absolute;
        bottom: -5px;
        left: 0;
    }

    nav a:hover::after {
        width: 100%;
    }

    nav ul {
        list-style: none;
        display: flex;
        gap: 2rem;
    }

    main {
        padding: 2rem;
        max-width: 1000px;
        margin: auto;
    }

    footer {
        background: linear-gradient(90deg, #1a1a1a, #333);
        padding: 2rem;
        text-align: center;
        font-size: 0.875rem;
        color: #888;
    }

    footer p {
        margin: 0.5rem 0;
    }

    footer p small {
        display: block;
        font-size: 0.75rem;
        color: #666;
    }

    .header-divider {
        border: none;
        border-top: 8px solid #0033cc; /* Softer blue */
        margin: auto;
        padding: 0.5rem;
    }

    .header-top {
        border: none;
        border-top: 4px solid #b30000; /* Muted red */
        margin: auto;
        margin-bottom: 1rem;
        padding: 0.5rem;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .header-title {
            font-size: 2rem;
        }

        nav ul {
            flex-direction: column;
            gap: 1rem;
        }

        main {
            padding: 1rem;
        }
    }
</style>
