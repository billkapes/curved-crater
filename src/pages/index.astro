---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
---

<MainLayout title="Home | JBJefferson">
  <Hero />
  <section
    style="
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      text-align: left;
      padding: 10rem 2rem;
     
      color: white;
    "
  >
    <h1 style="align-self: flex-start; margin-bottom: 2rem;">
      Welcome to the Official Website of John Blanchard Jefferson's Books
    </h1>
    <div style="display: flex; width: 100%; justify-content: space-between;">
      <div style="flex: 1;"></div> <!-- Empty space for the left side -->
      <p style="flex: 1; padding-left: 5rem;">
        *example blurb: Enter the world of high-stakes secrets, shadowy
        motives, and pulse-pounding twists. JB Jefferson crafts thrillers that
        will keep you reading long past midnight. Ready to uncover the truth?
      </p>
    </div>
    <a
      href="/books"
      style="display: inline-block; margin-top: 1rem; padding: 0.75rem 1.5rem; background: #b30000; color: white; text-decoration: none; border-radius: 4px;"
    >
      <ion-icon name="book"></ion-icon>
      View Books
    </a>
    <a
      href="https://www.amazon.com/stores/John-Blanchard-Jefferson/author/B0F1F13GLY"
      target="_blank"
      style="display: inline-block; margin-top: 1rem; padding: 0.75rem 1.5rem; background: #b30000; color: white; text-decoration: none; border-radius: 4px; "
    >
      <ion-icon name="logo-amazon"></ion-icon>
      Shop Amazon
    </a>
  </section>
  <div class="socials">
    <a href="https://x.com/jbjefferson" target="_blank" rel="noopener">
      <ion-icon size="large" name="logo-x"></ion-icon>
    </a>
    <a
      href="https://www.instagram.com/johnblanchardjeffersonbooks/"
      target="_blank"
      rel="noopener"
    >
      <ion-icon size="large" name="logo-instagram"></ion-icon>
    </a>
    <a href="https://www.goodreads.com/johndoe" target="_blank" rel="noopener">
      <ion-icon size="large" name="logo-facebook"></ion-icon>
    </a>
    <a href="https://www.goodreads.com/johndoe" target="_blank" rel="noopener">
      <ion-icon size="large" name="logo-tiktok"></ion-icon>
    </a>
  </div>
  <style>
    .socials {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
    }
    .socials a {
      color: #f5f5f5;
      text-decoration: none;
      font-weight: 600;
    }
    .socials a:hover {
      color: #cc0000;
    }
    .socials ion-icon {
      transition: color 0.3s ease;
    }
  </style>
  <script
    type="module"
    src="https://unpkg.com/ionicons@7.4.0/dist/ionicons/ionicons.esm.js"
  ></script>
  <script
    nomodule
    src="https://unpkg.com/ionicons@7.4.0/dist/ionicons/ionicons.js"></script>
</MainLayout>
