---
import MainLayout from "../layouts/MainLayout.astro";

---

<MainLayout title="Contact | John Blanchard Jefferson">
    <section class="contact-page">
        <h1>Contact</h1>
        <p>
            Email :
        </p>
        <a href="mailto:info@johnblanchardjeffersonbooks.com" class="email"
            >info@johnblanchardjeffersonbooks.com
        </a>
        <p>Follow on social media for updates and more :</p>
        <div class="socials">
            <a href="https://x.com/jbjefferson" target="_blank" rel="noopener">
                <ion-icon size="large" name="logo-x"></ion-icon>
                
            </a>
            <a href="https://www.instagram.com/johnblanchardjeffersonbooks/"
                target="_blank"
                rel="noopener">
                <ion-icon size="large" name="logo-instagram"></ion-icon>    
            </a>
            <a href="https://www.facebook.com/profile.php?id=61575078969345"
                target="_blank"
                rel="noopener">
                <ion-icon size="large" name="logo-facebook"></ion-icon>
            </a>
            <a href="https://www.tiktok.com/@jbjeffersonbooks"
                target="_blank"
                rel="noopener">
                <ion-icon size="large" name="logo-tiktok"></ion-icon>
            </a>
        </div>
    </section>
    
</MainLayout>

<style>
    .contact-page {
        max-width: 700px;
        margin: auto;
        padding: 2rem;
        text-align: center;
    }

    .contact-page h1 {
        font-family: "Playfair Display", serif;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .contact-page p {
        color: #ccc;
        margin-bottom: 1rem;
    }

    .email {
        display: inline-block;
        margin-bottom: 2rem;
        font-weight: bold;
        color: white;
        text-decoration: none;
    }

    .email:hover {
        text-decoration: underline;
    }

    .socials {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 15rem;
    }

    .socials a {
        color: #f5f5f5;
        text-decoration: none;
        font-weight: 600;
    }

    .socials a:hover {
        color: #cc0000;
    }
</style>
