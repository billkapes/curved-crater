---
const { heading, buttonText, buttonLink } = Astro.props;
---

<style>
.hero {
  position: relative;
  width: 100%;
  height: 60vh;
  background-image: url("/jefferson.jpg");
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 2rem;
  color: white;
}

.hero-content {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
}

.heading {
  align-self: flex-end;
  font-size: 2rem;
  font-weight: bold;
  text-align: right;
}

.button-wrapper {
  align-self: flex-end;
}

.button {
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 0.75rem 1.5rem;
  text-decoration: none;
  border-radius: 0.5rem;
  transition: background-color 0.3s ease;
}

.button:hover {
  background-color: rgba(0, 0, 0, 0.9);
}

@media (max-width: 768px) {
  .hero {
    height: 40vh;
    padding: 1rem;
  }

  .heading {
    font-size: 1.5rem;
  }
}
</style>

<section class="hero">
  <div class="hero-content">
    <div class="heading">Welcome to the Official Homepage of<br />John Blanchard Jefferson's Books</div>
    <div class="button-wrapper">
      <a href={buttonLink} class="button">{buttonText}</a>
    </div>
  </div>
</section>
