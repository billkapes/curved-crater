---
const { buttonText, buttonLink } = Astro.props;
---

<style>
.hero {
  position: relative;
  width: 100%;
  height: 60vh;
  background-image: url("/jefferson.jpg");
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 2rem;
  color: white;
  border: 2px solid #0033cc;
}

.hero-content {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
}

.heading {
  align-self: flex-end;
  font-size: 2rem;
  font-weight: bold;
  text-align: right;
  background-color: rgba(0, 0, 0, 0.4);
  padding-left: 1rem;
  padding-right: 1rem;
}

.button-wrapper {
  align-self: flex-end;
}

.button {
  background-color: #FF9900;
  color: black;
  padding: 1.5rem 1.5rem;
  text-decoration: none;
  border-radius: 0.5rem;
  transition: background-color 0.3s ease;
  font-size: 1.5rem;
  font-weight: bold;}

.button:hover {
  background-color: #b46c00;
}

@media (max-width: 768px) {
  .hero {
    height: 40vh;
    padding: 1rem;
  }

  .heading {
    font-size: 1.5rem;
  }
}
</style>

<section class="hero">
  <div class="hero-content">
    <div class="heading">Welcome to the Official Homepage of<br />John Blanchard Jefferson's Books</div>
    <div class="button-wrapper">
      <a href={buttonLink} class="button">{buttonText}
        <ion-icon size="large" name="logo-amazon" style="position: relative; top: 4px;"></ion-icon>
      </a>
    </div>
  </div>
</section>
