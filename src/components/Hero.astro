---
// src/components/Hero.astro
---

<section class="hero">
  <h1>
    Welcome to the Official Homepage of<br />John Blanchard Jefferson's Books
  </h1>

  <div class="buttons-container">
    <a
      href="https://www.amazon.com/stores/John-Blanchard-Jefferson/author/B0F1F13GLY"
      target="_blank"
      class="cta"
    >
      <ion-icon name="logo-amazon"></ion-icon>
      Shop on Amazon
    </a>
  </div>
</section>

<style>
  .hero {
    background: url("/jefferson.jpg") no-repeat center center/cover;
    color: white;
    padding: 0rem 1.5rem;
    text-align: right;
    border: #0033cc 2px solid;
    box-shadow: 0 0 10px 3px rgba(0, 51, 204, 0.8);
    display: flex;
    align-items: flex-end;
    min-height: 70vh;
    flex-direction: column;
    align-content: space-between;
    justify-content: space-between;
  }

  .hero h1 {
    font-size: 1.6rem; /* Increased font size */
    max-width: 50%; /* Contain the heading to the right side */
    margin-left: auto; /* Push the heading to the right */
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Adds a subtle shadow */
    text-align: center;
    background-color: rgba(0, 0, 0, 0.5); /* Dark transparent background */
    padding: 0.2rem; /* Add padding for better readability */
    border-radius: 4px; /* Optional: rounded corners */
  }

  .hero p {
    text-shadow: 4px 4px 4px rgba(0, 0, 0, 0.7); /* Keeps the shadow */
    text-align: right;
  }

  .buttons-container {
    display: flex;
    gap: 5rem;
    margin-bottom: 1.5rem;
  }

  .cta {
    display: inline-block;
    margin-top: 1rem;
    margin-right: 3rem;
    padding: 1.5rem 3.5rem;
    background: #b30000;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-size: 1.75rem;
  }

  .socials {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }
  .socials a {
    color: #f5f5f5;
    text-decoration: none;
    font-weight: 600;
  }
  .socials a:hover {
    color: #cc0000;
  }
  .socials ion-icon {
    transition: color 0.3s ease;
  }
</style>
